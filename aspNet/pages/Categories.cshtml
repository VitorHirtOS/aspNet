@page "~/Categories/{skip?}/{take?}"
@model aspNet.pages.CategoriesModel
@{
    ViewData["Title"] = "Categories";
}
@using System.Globalization

<h1>Categories</h1>
<table>
    <thead>
    <tr>
        <td>
            ID
        </td>
        <td>
            Title
        </td>
        <td>
            Price
        </td>
    </tr>
    </thead>
    <tbody>
        @foreach (var category in Model.CategoriesList)
        {
        <tr>
            <td>
                @category.Id
            </td>
            <td>
                @category.Title
            </td>
            <td>
                @category.Price.ToString("C", provider:new CultureInfo("pt-BR"))
            </td>
        </tr>
    }
    </tbody>
</table>